    "version": "0.2.0",
    "configurations": [
        {
            "name": "setup outlook",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "cwd": "${workspaceFolder}",
            "program": "./cmd/restmail",
            "args" : ["-provider", "outlook", "-setup", "-sender", "anthony.metzidis@gmail.com", "-setup"],
        },
        {
            "name": "setup gmail",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "cwd": "${workspaceFolder}",
            "program": "./cmd/restmail",
            "args" : ["-provider", "gmail", "-authorize", "-f", "anthony.metzidis@gmail.com"]
        },
        {
            "name": "setup outlook gcs",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "cwd": "${workspaceFolder}",
            "program": "./cmd/restmail",
            "args" : ["-provider", "outlook", "-storage", "gcs", "-authorize", "-f", "anthony.metzidis@gmail.com"],
            "env": {"GCS_BUCKET": "tonym.us", "GCS_PREFIX": "test/restmail"}
        },
